\long\def\@makecaption#1#2{%
   \vskip 10\p@
   \setbox\@tempboxa\hbox{#1: #2}%
   \ifdim \wd\@tempboxa >\hsize
       #1. #2\centering\par
     \else
       \hbox to\hsize{\hfil\box\@tempboxa\hfil}%
   \fi}
%
%-----------------------------------------------------------
% 
% wenn caption-text zu lang ist, soll er in eine Box
%
\newdimen\boxwidth
\long\def\@makecaption#1#2{%
   \vskip 10\p@%
   \setbox\@tempboxa\hbox{#1: #2}%
   \setbox4=\hbox{#1:~~} 	% Breite von 'Abbildung:~~'
   \boxwidth=\hsize		% Seitenbreite
   \advance\boxwidth by -\wd4	% Rest ausrechnen
   %------- garantiert normalen Zeilenabstand ----
       \renewcommand{\baselinestretch}{1.0}%
       \small\normalsize%
   %----
   \ifdim \wd\@tempboxa >\hsize%
   	 \parbox[t]{\wd4}{\makebox[0cm]{}#1: }%
	 \parbox[t]{\boxwidth}{\makebox[0cm]{}#2}%
     \else%
       \hbox to\hsize{\hfil\box\@tempboxa\hfil}%
   \fi}
%

%
%-----------------------------------------------------------
% 
% Ausrichtung von zwei Abbildungen am oberen Rand
%
\def\doublebox#1#2{%
   \setbox1=\hbox{#1}%
   \setbox2=\hbox{#2}%
   \vbox{%
   	\hfil\hbox{\parbox[t]{\wd1}{\makebox[0cm]{}\\#1}}%
   	\hfil\hbox{\parbox[t]{\wd2}{\makebox[0cm]{}\\#2}}%
   }
}

%
%-----------------------------------------------------------
% 
% horizontale Ausrichtung mit halber Breite
%
% !! benutzt \boxwidth aus caption-Def.
%
\newdimen\boxwidtha
\def\tabbox#1{%
   \boxwidtha=\hsize		% Seitenbreite
%   \advance\boxwidtha by - \wd1	% Rest ausrechnen
   \divide\boxwidtha by 2	% Rest ausrechnen
   \parbox[t]{\boxwidtha}{#1}%
}


